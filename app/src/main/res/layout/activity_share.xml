<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_activity_share">

    <FrameLayout
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_main_logo_outer"
        android:elevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="24dp"
        android:id="@+id/frame">

        <FrameLayout
            android:layout_width="184dp"
            android:layout_height="184dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_main_logo_inner"
            android:id="@+id/activity_share_icon_placeholder"
            android:animateLayoutChanges="true" />

        <FrameLayout
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:background="@drawable/logo"/>

        <FrameLayout
            android:visibility="gone"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/activity_share_logo_icon"/>

        <revolver.ideal.ui.view.CircularLayout
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_gravity="center"
            android:id="@+id/activity_share_roster"
            app:radius="64dp"
            app:centerLayout="@layout/activity_share_roster_center"/>

    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:background="@drawable/bg_btn_ig"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/activity_share_btn_ig"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#45454545"
        android:elevation="-1dp"
        android:visibility="gone"
        android:alpha="0"
        android:id="@+id/dim"/>

</FrameLayout>